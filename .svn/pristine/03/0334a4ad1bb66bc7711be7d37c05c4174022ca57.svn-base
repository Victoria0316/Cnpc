<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        style="@style/common_text"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginTop="@dimen/dialog_margin_top"
        android:text="@string/mine_oil_select"
        android:textColor="@color/text_light_black" />

    <GridView
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginRight="@dimen/common_margin"
        android:cacheColorHint="@color/common_transparent"
        android:horizontalSpacing="10dp"
        android:listSelector="@drawable/selector_radio_border"
        android:numColumns="4"
        android:verticalSpacing="10dp">

    </GridView>

    <TextView
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/common_margin_big"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginRight="@dimen/common_margin"
        android:layout_marginTop="@dimen/common_margin_big"
        android:background="@drawable/button_blue"
        android:gravity="center"
        android:text="@string/confirm"
        android:textColor="@color/white" />
</LinearLayout>