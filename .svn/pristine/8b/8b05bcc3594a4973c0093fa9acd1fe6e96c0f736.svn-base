<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"/>

    <ImageView
        android:id="@+id/position_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" />

    <TextView
        android:id="@+id/tv_title_left"
        android:layout_toRightOf="@id/position_image"
        android:layout_alignParentRight="true"
        style="@style/CommonTitle"
        android:textSize="@dimen/common_TitleLeft_30px"
        android:paddingRight="10dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_marginLeft="@dimen/common_padding_small" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/CommonTitle" />


    <TextView
        android:id="@+id/tv_title_right"
        style="@style/CommonTitle"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/common_TitleRight_26px" />


    <ImageView
        android:id="@+id/iv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/il_search_bar"
        layout="@layout/include_search_titlebar"
        android:layout_toRightOf="@id/iv_back"
        android:layout_marginLeft="20dp">

    </include>


</RelativeLayout>
