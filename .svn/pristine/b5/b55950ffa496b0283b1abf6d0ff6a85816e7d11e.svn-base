<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"

    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_padding_middle"
        android:background="@color/common_white"
        android:gravity="center_horizontal"
        android:textSize="@dimen/common_bottom_big_34px"
        android:textColor="@color/common_black"
        android:visibility="gone"
        android:text="分享到"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/share_app_bg"
        android:gravity="center">

        <ImageButton
            android:id="@+id/share_wechat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/share_wechat"/>

        <ImageButton
            android:id="@+id/share_circle_friends"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/share_circle_friends"/>

        <ImageButton
            android:id="@+id/share_sina"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/share_sina"/>

    </LinearLayout>

    <Button
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/Login_left"
        android:background="@color/white"
        android:text="@string/cancel"
        android:textSize="@dimen/common_bottom_big_34px"
        android:textColor="@color/common_black"
        android:gravity="center"/>


</LinearLayout>