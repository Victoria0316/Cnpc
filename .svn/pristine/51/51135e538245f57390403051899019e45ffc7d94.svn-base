<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/common_padding_big"
                android:layout_marginTop="@dimen/marginTop"
                android:drawablePadding="@dimen/common_padding_middle"
                android:drawableTop="@drawable/success"
                android:gravity="center_horizontal"
                android:text="@string/congratulations_success"
                android:textColor="@color/common_black"
                android:textSize="@dimen/common_annotation_28px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/pay_success_bg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/common_padding_middle"
                    android:drawableLeft="@drawable/order_details"
                    android:drawablePadding="@dimen/common_padding_middle"
                    android:gravity="center_vertical"
                    android:text="@string/order_details"
                    android:textColor="@color/common_black_light"
                    android:textSize="@dimen/common_title_template_26px" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/common_imaginary_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_padding_big"
                    android:layout_marginTop="@dimen/common_padding_middle"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/common_padding_small"
                        android:text="@string/order_number"
                        android:textColor="@color/common_black_light"
                        android:textSize="@dimen/common_bottom_small_22px" />

                    <TextView
                        android:id="@+id/orderNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/common_black_light"
                        android:textSize="@dimen/common_bottom_small_22px" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_padding_big"
                    android:layout_marginTop="@dimen/common_padding_big"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/common_padding_small"
                        android:text="@string/trading_hours"
                        android:textColor="@color/common_black_light"
                        android:textSize="@dimen/common_bottom_small_22px" />

                    <TextView
                        android:id="@+id/transactionTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/common_black_light"
                        android:textSize="@dimen/common_bottom_small_22px" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_padding_big"
                    android:layout_marginTop="@dimen/common_padding_big"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/common_padding_small"
                        android:text="支付金额："
                        android:textColor="@color/common_black_light"
                        android:textSize="@dimen/common_bottom_small_22px" />

                    <TextView
                        android:id="@+id/payAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/common_black_light"
                        android:textSize="@dimen/common_bottom_small_22px" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/order_annotation_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/common_padding_big"
                        android:text="(已转入冻结款，当前冻结款余额"
                        android:textColor="@color/common_text_hint"
                        android:textSize="@dimen/common_bottom_small_22px" />

                    <TextView
                        android:id="@+id/order_annotation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/common_pink"
                        android:textSize="@dimen/common_bottom_small_22px" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="元)"
                        android:textColor="@color/common_text_hint"
                        android:textSize="@dimen/common_bottom_small_22px" />

                </LinearLayout>



                <LinearLayout
                    android:id="@+id/ll_preferentialPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_padding_big"
                    android:layout_marginTop="@dimen/common_padding_middle"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/common_padding_small"
                        android:text="赠送："
                        android:textColor="@color/common_black_light"
                        android:textSize="@dimen/common_bottom_small_22px" />

                    <TextView
                        android:id="@+id/preferentialPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/common_black_light"
                        android:textSize="@dimen/common_bottom_small_22px" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_padding_big"
                    android:layout_marginTop="@dimen/common_padding_big"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/common_padding_small"
                        android:text="充值金额："
                        android:textColor="@color/common_black_light"
                        android:textSize="@dimen/common_bottom_small_22px" />

                    <TextView
                        android:id="@+id/preferentialAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/common_black_light"
                        android:textSize="@dimen/common_bottom_small_22px" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_changeAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_padding_big"
                    android:layout_marginTop="@dimen/common_padding_big"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/common_padding_small"
                        android:text="@string/zero_wallet"
                        android:textColor="@color/common_black_light"
                        android:textSize="@dimen/common_bottom_small_22px" />

                    <TextView
                        android:id="@+id/changeAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/common_black_light"
                        android:textSize="@dimen/common_bottom_small_22px" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_redAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_padding_big"
                    android:layout_marginTop="@dimen/common_padding_big"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/common_padding_small"
                        android:text="@string/red_packet"
                        android:textColor="@color/common_black_light"
                        android:textSize="@dimen/common_bottom_small_22px" />

                    <TextView
                        android:id="@+id/redAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/common_black_light"
                        android:textSize="@dimen/common_bottom_small_22px" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_actualAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_padding_big"
                    android:layout_marginTop="@dimen/common_padding_big"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/common_padding_small"
                        android:text="@string/other_pay"
                        android:textColor="@color/common_black_light"
                        android:textSize="@dimen/common_bottom_small_22px" />

                    <TextView
                        android:id="@+id/actualAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/common_black_light"
                        android:textSize="@dimen/common_bottom_small_22px" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_padding_big"
                    android:layout_marginTop="@dimen/common_padding_big"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/common_padding_small"
                        android:text="@string/actual_pay"
                        android:textColor="@color/common_black_light"
                        android:textSize="@dimen/common_bottom_small_22px" />

                    <TextView
                        android:id="@+id/actualPayment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/common_black_light"
                        android:textSize="@dimen/common_bottom_small_22px" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_awardedIntegral"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_padding_big"
                    android:layout_marginTop="@dimen/common_padding_middle"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/common_padding_small"
                        android:text="@string/giving_integral"
                        android:textColor="@color/common_black_light"
                        android:textSize="@dimen/common_bottom_small_22px" />

                    <TextView
                        android:id="@+id/awardedIntegral"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/common_pink"
                        android:textSize="@dimen/common_bottom_small_22px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分"
                        android:textColor="@color/common_black_light"
                        android:textSize="@dimen/common_bottom_small_22px" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_availableAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/common_padding_middle"
                    android:layout_marginLeft="@dimen/common_padding_big"
                    android:layout_marginTop="@dimen/common_padding_middle"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/common_padding_small"
                        android:text="@string/cumulative_integral"
                        android:textColor="@color/common_black_light"
                        android:textSize="@dimen/common_bottom_small_22px" />

                    <TextView
                        android:id="@+id/availableAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/common_pink"
                        android:textSize="@dimen/common_bottom_small_22px" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分"
                        android:textColor="@color/common_black_light"
                        android:textSize="@dimen/common_bottom_small_22px" />

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_shake"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/common_padding_middle"
                android:layout_marginTop="@dimen/common_padding_middle"
                android:background="@drawable/forgot_password_bg"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/common_padding_middle">

                <TextView
                    style="@style/title_template"
                    android:drawableLeft="@drawable/order_phone"
                    android:drawablePadding="@dimen/common_padding_small"
                    android:gravity="center_vertical"
                    android:text="@string/shake"
                    android:textColor="@color/common_black"
                    android:textSize="@dimen/common_title_template_26px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:src="@drawable/arrow_gray_right" />
            </RelativeLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>