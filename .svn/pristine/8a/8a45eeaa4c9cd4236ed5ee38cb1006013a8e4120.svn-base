<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/common_padding_middle"
        android:background="@drawable/pay_time_bg_select"
        android:padding="@dimen/common_padding_middle">

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pay_instant"
            android:textColor="@color/common_black"
            android:textSize="@dimen/common_TitleLeft_30px" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/pay_discount"
            android:layout_alignParentRight="true"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="98"
                android:textColor="@color/common_red_Statistical"
                android:textSize="@dimen/common_big_settlement_36px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%"
                android:textColor="@color/common_red_Statistical"
                android:textSize="@dimen/common_card_integral_22px" />

        </LinearLayout>

        <TextView
            android:id="@+id/pay_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/common_discount"
            android:gravity="center"
            android:text="@string/pay_discount"
            android:textColor="@color/white"
            android:textSize="@dimen/common_card_integral_22px" />

        <TextView
            android:id="@+id/instructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@string/instant"
            android:textColor="@color/common_text_hint"
            android:textSize="@dimen/common_card_integral_22px" />
    </RelativeLayout>

</LinearLayout>