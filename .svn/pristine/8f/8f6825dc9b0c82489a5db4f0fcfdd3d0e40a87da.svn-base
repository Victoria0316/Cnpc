<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gas_bg"
    android:padding="@dimen/common_padding_big">


    <ImageView
        android:id="@+id/iv_gas_station"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/gas_station" />


    <TextView
        android:id="@+id/gasStationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_gas_station"
        android:layout_marginLeft="@dimen/common_padding_middle"
        android:layout_toRightOf="@id/iv_gas_station"
        android:text="石化卡"
        android:textColor="@color/common_black"
        android:textSize="@dimen/common_card_integral_32px" />


    <TextView
        android:id="@+id/tv_totoal_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_gas_station"
        android:layout_marginLeft="@dimen/common_padding_middle"
        android:layout_toRightOf="@id/iv_gas_station"
        android:text="油站总部编号:"
        android:textColor="@color/common_black"
        android:textSize="@dimen/common_blue_border_24px" />


    <TextView
        android:id="@+id/headquartersNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_gas_station"
        android:layout_marginLeft="@dimen/common_padding_middle"
        android:layout_toRightOf="@id/tv_totoal_num"
        android:textColor="@color/common_black"
        android:textSize="@dimen/common_blue_border_24px" />

    <TextView
        android:id="@+id/default_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/iv_gas_station"
        android:text="默认"
        android:textColor="@color/common_blue"
        android:textSize="@dimen/common_annotation_28px"
        android:visibility="gone"/>


    <TextView
        android:id="@+id/tv_cardNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_gas_station"
        android:layout_marginLeft="@dimen/common_padding_big"
        android:layout_marginTop="@dimen/common_padding_big"
        android:text="卡号:"
        android:textColor="@color/common_black"
        android:textSize="@dimen/common_annotation_28px" />

    <TextView
        android:id="@+id/tv_cardNo_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_gas_station"
        android:layout_marginLeft="@dimen/common_padding_big"
        android:layout_marginTop="@dimen/common_padding_big"
        android:layout_toRightOf="@id/tv_cardNo"
        android:text="0888888888888"
        android:textColor="@color/common_black"
        android:textSize="@dimen/common_annotation_28px" />


    <TextView
        android:id="@+id/tv_residual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_cardNo"
        android:layout_marginLeft="@dimen/common_padding_big"
        android:layout_marginTop="@dimen/common_padding_big"
        android:text="可圈存额："
        android:textColor="@color/common_black"
        android:textSize="@dimen/common_hint_26px" />

    <TextView
        android:id="@+id/tv_residual_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_cardNo_text"
        android:layout_marginLeft="@dimen/common_padding_big"
        android:layout_marginTop="@dimen/common_padding_big"
        android:layout_toRightOf="@id/tv_residual"
        android:text="588.00"
        android:textColor="@color/common_black"
        android:textSize="@dimen/common_hint_26px" />


   <!-- <TextView
        android:id="@+id/tv_integration"
