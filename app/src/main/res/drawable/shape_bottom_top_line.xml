<?xml version="1.0" encoding="UTF-8"?>
<!-- 灰色边框 长方体 上下框 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape>
            <solid android:color="#FFFFFF" />

            <stroke
                android:width="1dp"
                android:color="#ffa8abad" />
        </shape>
    </item>
    
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape>
            <solid android:color="#FFFFFF" />

 

            <stroke
                android:width="1dp"
                android:color="#ffffffff" />
        </shape>
    </item>

</layer-list>