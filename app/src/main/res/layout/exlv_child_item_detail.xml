            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/common_padding_small"
                android:text="加油升数:"
                android:textColor="@color/common_black_light"
                android:textSize="@dimen/common_bottom_small_22px" />

            <TextView
                android:id="@+id/tv_litre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 升"
                android:textColor="@color/common_black_light"
                android:textSize="@dimen/common_bottom_small_22px" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_padding_big"
            android:layout_marginTop="@dimen/common_padding_big"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/common_padding_small"
                android:text="优惠额："
                android:textColor="@color/common_black_light"
                android:textSize="@dimen/common_bottom_small_22px" />

            <TextView
                android:id="@+id/tv_favorable_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5000元"
                android:textColor="@color/common_black_light"
                android:textSize="@dimen/common_bottom_small_22px" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_padding_big"
            android:layout_marginTop="@dimen/common_padding_big"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/common_padding_small"
