                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100元"
                android:textColor="@color/common_black_light"
                android:textSize="@dimen/common_bottom_small_22px" />

        </LinearLayout>



        <LinearLayout
