<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shake_bg">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/shake_text_orange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shake_text_orange"
                android:layout_marginTop="@dimen/Login_left"
                android:layout_gravity="center_horizontal" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/shake_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/shake_text"
                    android:layout_gravity="center_horizontal" />

                <ImageView
                    android:id="@+id/shake_round"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/shake_round"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="32dp" />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_rules"
                android:textColor="@color/white"
                android:textSize="@dimen/common_annotation_28px"
                android:layout_marginLeft="@dimen/common_padding_middle"
                android:layout_marginTop="@dimen/common_padding_middle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_padding_middle"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                >

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="每次摇动花费"

                    android:textColor="@color/yellow"
                    android:textSize="@dimen/common_TitleLeft_30px"
                    android:layout_marginLeft="@dimen/common_padding_middle" />

                <TextView
                    android:id="@+id/current"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:textColor="@color/common_red"
                    android:textSize="@dimen/common_Title_40px"
                    android:layout_toRightOf="@+id/text1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="积分"
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/common_TitleLeft_30px"
                    android:layout_toRightOf="@+id/current"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_padding_middle"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前积分剩余"
                    android:textColor="@color/text_blue"
                    android:textSize="@dimen/common_TitleLeft_30px"
                    android:layout_marginLeft="@dimen/common_padding_middle" />

                <TextView
                    android:id="@+id/total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/common_red"
                    android:textSize="@dimen/common_Title_40px"
            />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="积分"
                    android:textColor="@color/text_blue"
                    android:textSize="@dimen/common_TitleLeft_30px"
                    />

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rules"
                android:textColor="@color/white"
                android:textSize="@dimen/common_bottom_small_22px"
                android:layout_marginLeft="@dimen/common_padding_middle"
                android:layout_marginRight="@dimen/common_padding_middle"
                android:layout_marginTop="@dimen/common_padding_middle"
                android:lineSpacingExtra="@dimen/common_padding_small" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>