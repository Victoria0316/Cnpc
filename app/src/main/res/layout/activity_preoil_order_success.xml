<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/common_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/success"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginTop"
                android:drawablePadding="@dimen/common_padding_middle"
                android:drawableTop="@drawable/success"
                android:gravity="center_horizontal"
                android:text="恭喜您，预购成功"
                android:textColor="@color/common_black"
                android:textSize="@dimen/common_annotation_28px" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/common_padding_big"
                android:gravity="center_horizontal"
                android:text="(*^__^*)"
                android:textColor="@color/common_black"
                android:textSize="@dimen/common_annotation_28px" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/pay_success_bg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/common_padding_middle"
                    android:drawableLeft="@drawable/order_details"
                    android:drawablePadding="@dimen/common_padding_middle"
                    android:gravity="center_vertical"
                    android:text="@string/order_details"
                    android:textColor="@color/common_black_light"
                    android:textSize="@dimen/common_title_template_26px" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/common_imaginary_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_padding_big"
                    android:layout_marginTop="@dimen/common_padding_middle"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/common_padding_small"
                        android:text="订单号:"
                        android:textColor="@color/common_red"
                        android:textSize="@dimen/common_bottom_small_22px" />

                    <TextView
                        android:id="@+id/orderNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="123452362752823425"
                        android:textColor="@color/common_red"
                        android:textSize="@dimen/common_bottom_small_22px" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_padding_big"
                    android:layout_marginTop="@dimen/common_padding_big"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/common_padding_small"
                        android:text="@string/trading_hours"
                        android:textColor="@color/common_black_light"
                        android:textSize="@dimen/common_bottom_small_22px" />

                    <TextView
                        android:id="@+id/transactionTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2015-05-05  14:00:00"
                        android:textColor="@color/common_black_light"
                        android:textSize="@dimen/common_bottom_small_22px" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_padding_big"
                    android:layout_marginTop="@dimen/common_padding_big"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_oil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="预购油品 "
                        android:textColor="@color/common_black_light"
                        android:textSize="@dimen/common_bottom_small_22px" />

                    <TextView
                        android:id="@+id/model"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="92"
                        android:textColor="@color/common_black_light"
                        android:textSize="@dimen/common_bottom_small_22px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/common_padding_small"
                        android:text="#"
                        android:textColor="@color/common_black_light"
                        android:textSize="@dimen/common_bottom_small_22px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/common_padding_middle"
                        android:text="价格 "
                        android:textColor="@color/common_black_light"
                        android:textSize="@dimen/common_bottom_small_22px" />

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:textColor="@color/common_black_light"
                        android:textSize="@dimen/common_bottom_small_22px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="元/吨"
                        android:textColor="@color/common_black_light"
                        android:textSize="@dimen/common_bottom_small_22px" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_padding_big"
                    android:layout_marginTop="@dimen/common_padding_middle"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_productNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/common_padding_small"
                        android:text="购买吨数:"
                        android:textColor="@color/common_red"
                        android:textSize="@dimen/common_bottom_small_22px" />

                    <TextView
                        android:id="@+id/productNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 升"
                        android:textColor="@color/common_red"
                        android:textSize="@dimen/common_bottom_small_22px" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_padding_big"
                    android:layout_marginTop="@dimen/common_padding_big"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_payAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/common_padding_small"
                        android:text="预购金额"
                        android:textColor="@color/common_red"
                        android:textSize="@dimen/common_bottom_small_22px" />

                    <TextView
                        android:id="@+id/payAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5000元"
                        android:textColor="@color/common_red"
                        android:textSize="@dimen/common_bottom_small_22px" />

                </LinearLayout>

                <TextView
                    android:id="@+id/order_annotation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_padding_big"
                    android:text="(已转入预购油帐内，当前累计预购油8888升)"
                    android:textColor="@color/common_text_hint"
                    android:textSize="@dimen/common_bottom_small_22px" />

                <LinearLayout
                    android:id="@+id/ll_productProcedure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_padding_big"
                    android:layout_marginTop="@dimen/common_padding_big"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/common_padding_small"
                        android:text="手续费："
                        android:textColor="@color/common_red"
                        android:textSize="@dimen/common_bottom_small_22px" />

                    <TextView
                        android:id="@+id/productProcedure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textColor="@color/common_red"
                        android:textSize="@dimen/common_bottom_small_22px" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_padding_big"
                    android:layout_marginTop="@dimen/common_padding_big"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/common_padding_small"
                        android:text="实际金额："
                        android:textColor="@color/common_red"
                        android:textSize="@dimen/common_bottom_small_22px" />

                    <TextView
                        android:id="@+id/preferentialAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="200元"
                        android:textColor="@color/common_red"
                        android:textSize="@dimen/common_bottom_small_22px" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_changeAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_padding_big"
                    android:layout_marginTop="@dimen/common_padding_big"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/common_padding_small"
                        android:text="零钱包："
                        android:textColor="@color/common_black_light"
                        android:textSize="@dimen/common_bottom_small_22px" />

                    <TextView
                        android:id="@+id/changeAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100元"
                        android:textColor="@color/common_black_light"
                        android:textSize="@dimen/common_bottom_small_22px" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_actualAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_padding_big"
                    android:layout_marginTop="@dimen/common_padding_big"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/common_padding_small"
                        android:text="@string/other_pay"
                        android:textColor="@color/common_black_light"
                        android:textSize="@dimen/common_bottom_small_22px" />

                    <TextView
                        android:id="@+id/actualAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4700元"
                        android:textColor="@color/common_black_light"
                        android:textSize="@dimen/common_bottom_small_22px" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_padding_big"
                    android:layout_marginTop="@dimen/common_padding_big"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/common_padding_small"
                        android:text="@string/actual_pay"
                        android:textColor="@color/common_black_light"
                        android:textSize="@dimen/common_bottom_small_22px" />

                    <TextView
                        android:id="@+id/actualPayment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4700元"
                        android:textColor="@color/common_black_light"
                        android:textSize="@dimen/common_bottom_small_22px" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_awardedIntegral"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_padding_big"
                    android:layout_marginTop="@dimen/common_padding_middle"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/common_padding_small"
                        android:text="@string/giving_integral"
                        android:textColor="@color/common_black_light"
                        android:textSize="@dimen/common_bottom_small_22px" />

                    <TextView
                        android:id="@+id/awardedIntegral"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="200"
                        android:textColor="@color/common_pink"
                        android:textSize="@dimen/common_bottom_small_22px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分"
                        android:textColor="@color/common_black_light"
                        android:textSize="@dimen/common_bottom_small_22px" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_availableAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/common_padding_middle"
                    android:layout_marginLeft="@dimen/common_padding_big"
                    android:layout_marginTop="@dimen/common_padding_middle"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/common_padding_small"
                        android:text="@string/cumulative_integral"
                        android:textColor="@color/common_black_light"
                        android:textSize="@dimen/common_bottom_small_22px" />

                    <TextView
                        android:id="@+id/availableAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="500"
                        android:textColor="@color/common_pink"
                        android:textSize="@dimen/common_bottom_small_22px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分"
                        android:textColor="@color/common_black_light"
                        android:textSize="@dimen/common_bottom_small_22px" />

                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/rl_shake"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_padding_middle"
                    android:background="@drawable/forgot_password_bg"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/common_padding_middle">

                    <TextView
                        style="@style/title_template"
                        android:drawableLeft="@drawable/order_phone"
                        android:drawablePadding="@dimen/common_padding_small"
                        android:gravity="center_vertical"
                        android:text="@string/shake"
                        android:textColor="@color/common_black"
                        android:textSize="@dimen/common_title_template_26px" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:src="@drawable/arrow_gray_right" />
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>